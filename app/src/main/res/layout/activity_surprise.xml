<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/textview_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="serif-monospace"
        android:text="SIMON TURN"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rooster_imageButton10" />

    <ImageButton
        android:id="@+id/rooster_imageButton00"
        android:layout_width="190dp"
        android:layout_height="197dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rooster" />

    <ImageButton
        android:id="@+id/rooster_imageButton01"
        android:layout_width="190dp"
        android:layout_height="197dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/rooster_imageButton00"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rooster" />

    <ImageButton
        android:id="@+id/rooster_imageButton10"
        android:layout_width="190dp"
        android:layout_height="197dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rooster_imageButton00"
        app:srcCompat="@drawable/rooster" />

    <ImageButton
        android:id="@+id/rooster_imageButton11"
        android:layout_width="190dp"
        android:layout_height="197dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/rooster_imageButton10"
        app:layout_constraintTop_toBottomOf="@+id/rooster_imageButton01"
        app:srcCompat="@drawable/rooster" />

    <TextView
        android:id="@+id/hs_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="High Score"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/high_score_textView"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_player" />

    <TextView
        android:id="@+id/high_score_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="20dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rooster_imageButton11" />


    <TextView
        android:id="@+id/cs_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="Current Score"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/current_score_textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hs_textView" />

    <TextView
        android:id="@+id/current_score_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="20dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/high_score_textView" />


</android.support.constraint.ConstraintLayout>