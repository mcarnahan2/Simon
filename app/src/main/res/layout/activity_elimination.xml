<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
>




    <TextView
        android:id="@+id/textview_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="Player's Turn:"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/rain_imageButton"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rain" />

    <ImageButton
        android:id="@+id/snow_imageButton"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/rain_imageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/snow" />

    <ImageButton
        android:id="@+id/thunderstorm_imageButton"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_player"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rain_imageButton"
        app:srcCompat="@drawable/thunderstorm" />

    <ImageButton
        android:id="@+id/tornado_imageButton"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_player"
        app:layout_constraintStart_toEndOf="@+id/thunderstorm_imageButton"
        app:layout_constraintTop_toBottomOf="@+id/snow_imageButton"
        app:srcCompat="@drawable/tornado" />


</android.support.constraint.ConstraintLayout>